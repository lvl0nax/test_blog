<div class="comment">
  <div class="comment__header">
    <div class="comment__author">
      <%= comment.author_name %>
    </div>
    <div class="comment__created_at">
      Published at:
      <%= comment.created_at.strftime('%d.%m.%Y') %>
    </div>
  </div>
  <div class="comment__body">
    <%= comment.body %>
  </div>
</div>
